fptr1=fopen("abc.txt","r");
  if(fptr1==NULL){
    printf("There is no such file");
    exit(1);
  }
  fptr2=fopen("destination.txt","w");
  if(fptr1==NULL){
    printf("Error");
    exit(1);
  }
  while ((c=fgetc(fptr1))!=EOF){
    fputc(c,fptr2);
  }
  printf("SUCESSFULLY COPIED");
  fclose(fptr1);
  fclose(fptr2);
}
